/*
class Solution {
    public int numberOfMatches(int n) {
        // Rules : 
        // 1. even -> n/2 mtchs & n/2 proceed
        // 2. odd -> (n-1)/2 mtchs & (n-1)/2 + 1 proceed
        // Total number of matches
